
 <h1>New Behavior Log</h1>
<%= form_for @behavior_log do |f| %>
  
  <%= f.hidden_field :user_id%> 



    <%= f.label :date %>
    <%= f.date_field :date %>

    <%= f.label :time %>
    <%= f.time_field :time%>
    <br>
    <br> 

    <%= f.label :location %>
    <%= f.text_field :location%>
    <br>
    <br> 

    <%= f.label :before_behavior %>
    <%= f.text_field :before_behavior%>
    <br>
    <br> 

    <%= f.label :behavior_content %>
    <%= f.text_area :behavior_content%>
    <br>
    <br>    
    <%= f.label :outcome %>
    <%= f.text_field :outcome%>
    <br>
    <br> 
Behavior log recorded for: <%= f.collection_select :kid_id, current_user.kids.uniq, :id, :name %><br/><br/>    
<%= f.fields_for :kid, @behavior_log.kid do |kids_fields|%>
    <%= kids_fields.label :name%>
    <%= kids_fields.text_field :name %>
    <%= kids_fields.label :birthday%>
    <%= kids_fields.date_field :birthday %>
<% end %>
  <%= f.submit "Add Behavior Log"%>
<% end %>