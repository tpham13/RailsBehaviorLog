<!DOCTYPE html>
<html>
  <head>
    <title>RailsBehaviorLog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <%if logged_in? %>
      <%= link_to "User home page", user_path(current_user) %> |
      <%= link_to "See all behavior logs", behavior_logs_path %> |
      <%= link_to "See all kids", kids_path(@kids) %> |
      <%= link_to "Add a kid", new_kid_path %> |
      <%= link_to "Add a behavior log", new_behavior_log_path %> |
      <%= link_to "Logout", logout_path, method: "delete"%>

      <% else %>
      <%= link_to "Sign Up", signup_path %> |
      <%= link_to "Log In", login_path %> |
      <%= link_to('Log in with Facebook', '/auth/facebook') %>
      <% end %>
      <%= yield %>
  </body>
</html>
